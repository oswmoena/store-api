{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"allowJs": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"]
}
